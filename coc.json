{
    "languageserver": {
        "nix": {
            "command": "rnix-lsp",
            "filetypes": [
                "nix"
            ]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": [
                "cmake"
            ],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        },
        "clojure-lsp": {
            "command": "bash",
            "args": [
                "-c",
                "clojure-lsp"
            ],
            "filetypes": [
                "clojure"
            ],
            "rootPatterns": [
                "project.clj"
            ],
            "additionalSchemes": [
                "jar",
                "zipfile"
            ],
            "trace.server": "verbose",
            "initializationOptions": {}
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        }
    }
}
